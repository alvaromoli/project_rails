<%= render 'ccenter/navbar' %>
<div class="container pt-3">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Names</th>
        <th>Lastnames</th>
        <th>Email</th>
        <th>Contact date</th>
        <th>Status</th>
        <th>Questions</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.id %></td>
        <td><%= lead.contact.names %></td>
        <td><%= lead.contact.lastnames %></td>
        <td><%= lead.contact.email %></td>
        <td><%= lead.created_at %></td>
        <td><%= lead.status.nil? ? "No Satus" : lead.status.capitalize %></td>
        <% q = lead.contact.questions.count %>
        <td><%= link_to "#{q}", root_path %></td>
        <td><%= link_to "View", ccenter_contact_path(lead.contact.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
